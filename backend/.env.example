# ============================================================
# Voice Forge Backend — Environment Variables
# Copy this to .env and fill in your actual keys
# ============================================================

# ─── Server ──────────────────────────────────────────────────
PORT=3001
NODE_ENV=production
# FRONTEND_URL=https://yourdomain.com          # comma-separated for multiple origins

# ─── MongoDB ─────────────────────────────────────────────────
MONGODB_URI=mongodb://localhost:27017/voice-forge
# MONGO_POOL_SIZE=10                           # connection pool size (default 10)
# INTERACTION_TTL_DAYS=90                      # auto-delete interactions after N days

# ─── Authentication ──────────────────────────────────────────
JWT_SECRET=CHANGE_ME_TO_A_RANDOM_64_CHAR_SECRET
# JWT_MAX_AGE=24h                              # token expiry (default 24h)

# ─── Google Gemini LLM ──────────────────────────────────────
LLM_API_KEY=your_gemini_api_key_here
# LLM_MODEL=gemini-2.0-flash                  # override model name
# LLM_TIMEOUT_MS=30000                         # request timeout in ms

# ─── UltraVox Voice API ─────────────────────────────────────
ULTRAVOX_API_KEY=your_ultravox_api_key

# ElevenLabs (fallback if Ultravox is not configured)
ELEVENLABS_API_KEY=your_elevenlabs_api_key
ELEVENLABS_AGENT_ID=your_elevenlabs_agent_id_here

# ─── Twilio SMS ──────────────────────────────────────────────
SMS_ACCOUNT_SID=your_twilio_account_sid
SMS_AUTH_TOKEN=your_twilio_auth_token
SMS_FROM_NUMBER=+1234567890
SMS_TO_NUMBER=+1234567890

# ─── Rate Limiting ───────────────────────────────────────────
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=30

# ─── Task Queue ──────────────────────────────────────────────
# TASK_MAX_RETRIES=3                           # max retries per background task
# TASK_MAX_QUEUE_SIZE=500                      # guard against queue overflow

# ─── Logging ─────────────────────────────────────────────────
# LOG_LEVEL=info                               # trace, debug, info, warn, error, fatal
